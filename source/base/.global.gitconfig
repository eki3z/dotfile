[init]
	defaultBranch = main

[apply]
	whitespace = nowarn

[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	quotepath = false

## BUG recommended by gun manual, but conflicts with oh-my-zsh clone.
# [transfer]
# 	fsckObjects = true

[color]
	ui = true
	diff = auto
	status = auto
	branch = auto

[color "branch"]
	current = green bold
	local = green
	remote = red

# SEE https://git-scm.com/docs/git-config#Documentation/git-config.txt-color
[color "diff"]
	meta = yellow bold
	frag = blue bold
	commit = green bold
	old = red
	new = green
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red
	oldHighlight = black bold red
	newNormal = green
	newHighlight = black bold green

[commit]
	template = ~/.gitmessage

[blame]
	date = short
	coloring = repeatedLines
	blankBoundary = true

[color "blame"]
	repeatedLines = green

[log]
	abbrevCommit = true
	decorate = no

;; SEE http://git-scm.com/docs/git-log#_pretty_formats
[format]
	pretty = %C(magenta)%h %C(green)%<(14,trunc)%cr %C(blue)%<(15,trunc)%an%C(auto)%d%Creset %s

[advice]
	addEmptyPathspec = false
	addIgnoredFile = false
	detached = head

[rerere]
	enabled = true

[diff]
	ignoreSubmodules = untracked
	submodule = log

[difftool]
	prompt = false

[merge]
	conflictStyle = diff3
[mergetool]
	keepBackup = false
	prompt = false

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[push]
	followTags = True

[pull]
	rebase = false

[status]
	submoduleSummary = true

[http]
	sslVerify = false
	postBuffer = 524288000

## --------------------------- Tool -------------------------------

# diff-so-fancy
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = (echo && diff-so-fancy)
[diff-so-fancy]
	useUnicodeRuler = false
	rulerWidth = 58
	changeHunkIndicators = false